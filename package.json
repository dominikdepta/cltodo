{
  "name": "cltodo",
  "version": "0.0.1",
  "description": "CLTodo (Command Line Todo)",
  "type": "module",
  "bin": {
    "cltodo": "./bin/cltodo.js"
  },
  "scripts": {
    "dev": "concurrently --raw --killOthers --pauseInputStreamOnFinish \"tsc --watch\" \"node --watch ./bin/cltodo.js\"",
    "start": "node ./bin/cltodo.js",
    "build": "tsc",
    "clean": "rimraf bin"
  },
  "files": [
    "bin",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dominikdepta/cltodo.git"
  },
  "author": "Dominik Depta <dominikdepta@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "ink": "^5.2.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.3.1"
  }
}
